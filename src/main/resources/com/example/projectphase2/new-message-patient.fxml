<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projectphase2.NewMessagePatient">
   <children>
      <Label layoutX="168.0" layoutY="24.0" text="Patient Portal">
         <font>
            <Font size="48.0" />
         </font>
      </Label>
      <Button fx:id="patientInformation" layoutX="183.0" layoutY="94.0" mnemonicParsing="false" onAction="#goPatientInformation" text="Patient Information" />
      <Button fx:id="pastVisits" layoutX="302.0" layoutY="94.0" mnemonicParsing="false" onAction="#goPastVisits" text="Past Visits" />
      <Button fx:id="patientMessages" layoutX="371.0" layoutY="94.0" mnemonicParsing="false" onAction="#goPatientMessages" text="Messages" />
      <ComboBox fx:id="selectReciever" layoutX="105.0" layoutY="129.0" prefHeight="25.0" prefWidth="163.0" promptText="Select Reciever Email" />
      <TextField fx:id="subjectBox" layoutX="277.0" layoutY="129.0" prefHeight="25.0" prefWidth="234.0" promptText="Subject" />
      <TextArea fx:id="bodyBox" layoutX="107.0" layoutY="165.0" prefHeight="172.0" prefWidth="410.0" promptText="Body" wrapText="true" />
      <Button fx:id="sendButton" layoutX="265.0" layoutY="350.0" mnemonicParsing="false" onAction="#sendMessage" text="Send Message" />
      <Button fx:id="logOut" layoutX="504.0" layoutY="47.0" mnemonicParsing="false" onAction="#goLogOut" text="Log Out" />
   </children>
</AnchorPane>
