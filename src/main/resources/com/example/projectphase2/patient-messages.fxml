<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projectphase2.PatientMessages">
   <children>
      <Label layoutX="158.0" layoutY="14.0" text="Patient Portal">
         <font>
            <Font size="48.0" />
         </font>
      </Label>
      <Button fx:id="patientInformation" layoutX="173.0" layoutY="84.0" mnemonicParsing="false" onAction="#goPatientInformation" text="Patient Information" />
      <Button fx:id="pastVisits" layoutX="292.0" layoutY="84.0" mnemonicParsing="false" onAction="#goPastVisits" text="Past Visits" />
      <Button fx:id="patientMessages" layoutX="361.0" layoutY="84.0" mnemonicParsing="false" onAction="#goPatientMessages" text="Messages" />
      <Button fx:id="newMessageButton" layoutX="59.0" layoutY="121.0" mnemonicParsing="false" onAction="#goNewMessagePatient" text="New Message" />
      <ComboBox fx:id="subjectSelection" layoutX="158.0" layoutY="121.0" onAction="#updateMessageBox" prefHeight="25.0" prefWidth="212.0" promptText="Select Message" />
      <TextArea fx:id="bodyDisplay" editable="false" layoutX="58.0" layoutY="159.0" prefHeight="200.0" prefWidth="467.0" promptText="Message body will display here" wrapText="true" />
      <TextField fx:id="senderEmail" editable="false" layoutX="376.0" layoutY="121.0" promptText="Sender Email" />
      <Button fx:id="logOut" layoutX="504.0" layoutY="47.0" mnemonicParsing="false" onAction="#goLogOut" text="Log Out" />
   </children>
</AnchorPane>
